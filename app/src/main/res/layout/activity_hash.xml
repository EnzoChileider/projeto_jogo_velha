<?xml version="1.0" encoding="utf-8"?>
        <TableLayout
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="play.HashActivity">
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_margin="2pt"
                android:layout_width="45pt"
                android:layout_height="45pt" android:id="@+id/btn_0.0"/>
        <Button
                android:layout_margin="2pt"
                android:layout_width="45pt"
                android:layout_height="45pt" android:id="@+id/btn_1.0"/>
        <Button
                android:layout_margin="2pt"
                android:layout_width="45pt"
                android:layout_height="45pt" android:id="@+id/btn_2.0"/>
    </TableRow>
    <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:layout_margin="2pt"
                        android:layout_width="45pt"
                        android:layout_height="45pt" android:id="@+id/btn_0.1"/>
                <Button
                        android:layout_margin="2pt"
                        android:layout_width="45pt"
                        android:layout_height="45pt" android:id="@+id/btn_1.1"/>
                <Button
                        android:layout_margin="2pt"
                        android:layout_width="45pt"
                        android:layout_height="45pt" android:id="@+id/btn_2.1"/>
            </TableRow>
            <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:layout_margin="2pt"
                        android:layout_width="45pt"
                        android:layout_height="45pt" android:id="@+id/btn_0.2"/>
                <Button
                        android:layout_margin="2pt"
                        android:layout_width="45pt"
                        android:layout_height="45pt" android:id="@+id/btn_1.2"/>
                <Button
                        android:layout_margin="2pt"
                        android:layout_width="45pt"
                        android:layout_height="45pt" android:id="@+id/btn_2.2"/>
            </TableRow>

    <Button
            android:text="Exit"
            android:layout_width="15pt"
            android:layout_height="15pt" android:id="@+id/btn_exit"/>
</TableLayout>
